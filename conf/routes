# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

## Ingredients

# Display list of ingredients
GET     /ingredients                    controllers.IngredientsController.index()
# Return an HTML form for creating a new ingredient
GET     /ingredients/new                controllers.IngredientsController.create()
# Save a new ingredient
POST    /ingredients                    controllers.IngredientsController.save()
# Display a specific ingredient
GET     /ingredients/:id                controllers.IngredientsController.show(id:Long)
# Return an HTML form for editing an ingredient
#GET     /ingredients/:id/edit           controllers.IngredientsController.edit(id:Long)
# Update a specific ingredient
#PUT     /ingredients/:id                controllers.IngredientsController.update(id:Long)
# Delete a specific ingredient
#DELETE  /ingredients/:id                controllers.IngredientsController.destroy(id:Long)



# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
